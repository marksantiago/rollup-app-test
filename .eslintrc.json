{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "standard"
    ],
    "rules": {
      "prettier/prettier": ["error", { "singleQuote": true }]
    }
}
